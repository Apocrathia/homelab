---
extends: default

rules:
  line-length:
    max: 256
    level: warning
    ignore: |
      flux/manifests/01-bootstrap/flux-system/*

  # Adjust comments spacing rule to be compatible with prettier
  comments:
    min-spaces-from-content: 1  # Default is 2, but prettier uses 1
    level: warning  # Keep as warning instead of disabling completely

  # Other rules remain at their default settings
  document-start: enable
  document-end: disable
  truthy:
    check-keys: false

# Ignore authentik blueprint files with custom YAML tags
ignore:
  - 'flux/manifests/**/authentik-blueprint.yaml'
